<UserControl x:Class="ExamsPlatform.ClientWPF.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamsPlatform.ClientWPF.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock x:Name="welcomeTextBlock"/>
			<Button x:Name="btnGoToSignInPage" Margin="0" BorderThickness="0" Background="Transparent" Foreground="Blue"
					Content="sign in." Click="btnGoToSignInPage_Click"/>
		</StackPanel>
	</Grid>
</UserControl>
