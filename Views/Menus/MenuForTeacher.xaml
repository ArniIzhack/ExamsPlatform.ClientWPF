<UserControl x:Class="ExamsPlatform.ClientWPF.Views.Menus.MenuForTeacher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamsPlatform.ClientWPF.Views.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<Menu>
			<MenuItem Header="Options">
				<MenuItem Header="font size">
					<MenuItem Header="small"/>
					<MenuItem Header="default"/>
					<MenuItem Header="big"/>
				</MenuItem>
				<MenuItem Header="apearence">
					<MenuItem Header="dark mode"/>
					<MenuItem Header="bright mode"/>
				</MenuItem>
			</MenuItem>
			<MenuItem Header="Home" Click="GoToHomePage"/>
			<MenuItem Header="Exams" Click="GoToExamsPage"/>
			<MenuItem Header="Create New Exam" Click="GoToCreateNewExamPage"/>
			<MenuItem Header="Calender" Click="GoToCalendarPage"/>
		</Menu>
		<Menu Grid.Column="1">
			<MenuItem Header="Sign Out" Click="SIgnOut" HorizontalAlignment="Right"/>
		</Menu>
	</Grid>
</UserControl>
