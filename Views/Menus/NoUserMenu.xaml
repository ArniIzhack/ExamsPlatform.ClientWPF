<UserControl x:Class="ExamsPlatform.ClientWPF.Views.Menus.NoUserMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamsPlatform.ClientWPF.Views.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<Menu >
			<MenuItem Header="Home" Click="GoToHomePage"/>
		</Menu>
		<Menu Grid.Column="1" HorizontalAlignment="Right">
			<MenuItem Header="Sign In" Click="GoToSignInPage"/>
			<MenuItem Header="Sign Up" Click="GoToSignUpPage"/>
		</Menu>
	</Grid>
</UserControl>
